-- drop existing tables (if they exist)

DROP TABLE IF EXISTS Donor;
DROP TABLE IF EXISTS Donation;
DROP TABLE IF EXISTS Contact_Information;
DROP TABLE IF EXISTS Member;
DROP TABLE IF EXISTS Recipient;
DROP TABLE IF EXISTS Exhibit;
DROP TABLE IF EXISTS Organization;



-- create the tables

CREATE TABLE Example (
  id INTEGER AUTO_INCREMENT NOT NULL, -- unique identifier (automatic)
  name CHARACTER VARYING(24) NOT NULL UNIQUE,
  description CHARACTER VARYING(128),

  PRIMARY KEY (id)
);

CREATE TABLE ExampleWithForeignKey (
  exampleId INTEGER NOT NULL,
  value CHARACTER VARYING(32) NOT NULL,

  PRIMARY KEY (exampleId, value),
  FOREIGN KEY (exampleId) REFERENCES Example (id)
      ON UPDATE CASCADE ON DELETE RESTRICT
);


-- populate the database with representative data

INSERT INTO Example (name, description) VALUES
('one', 'un, uno, eins, ...'),
('two', 'deux, dos, zwei, ...'),
('three', 'trois, tres, drei, ...');

INSERT INTO ExampleWithForeignKey (exampleId, value) VALUES
((SELECT id FROM Example WHERE name = 'one'), '1'),
((SELECT id FROM Example WHERE name = 'one'), '0b00000001'),
((SELECT id FROM Example WHERE name = 'one'), '0o00000001'),
((SELECT id FROM Example WHERE name = 'one'), '0x00000001'),
((SELECT id FROM Example WHERE name = 'two'), '2');






CREATE TABLE Organization (
	OrgName VARCHAR(255) PRIMARY KEY,
	Type VARCHAR(255) NOT NULL, 
	Description VARCHAR(255) NOT NULL, 
	Nonprofit BIT NOT NULL,
	TotalOrgDonation FLOAT NOT NULL
);

INSERT INTO Organization (OrgName, Type, Description, Nonprofit, TotalOrgDonation)
VALUES (‘Coffman Foundation’, ‘Research’, ‘Foundation to better the research and museum communities’, 0, 10000.00);

INSERT INTO Organization (OrgName, Type, Description, Nonprofit, TotalOrgDonation)
VALUES (‘Herrington Home’, ‘Foster Shelter’, ‘Shelter to help homeless kids find homes’, 0, 10001.00);



CREATE TABLE Donor (
	MemId INT PRIMARY KEY,
	FirstName VARCHAR(255) NOT NULL, 
	LastName VARCHAR(255) NOT NULL,
	Age INTEGER NOT NULL CHECK (Age > 0),
	Veteran BIT NOT NULL,
	TotalDonations FLOAT NOT NULL CHECK (TotalDonations > 0),
	OrgName VARCHAR(255) NOT NULL,
	FOREIGN KEY (OrgName) REFERENCES Organization(OrgName)
);

INSERT INTO Donor (MemId, FirstName, LastName, Age, Veteran, TotalDonations, OrgName)
VALUES (68421, ‘Joel’, ‘Coffman’, 37, 1, 10000.00, ‘Coffman Foundation’);

INSERT INTO Donor (MemId, FirstName, LastName, Age, Veteran, TotalDonations, OrgName)
VALUES (22022, ‘Michael’, ‘Herrington’, 21, 0, 10001.00, ‘Herrington Home’);








CREATE TABLE Donation (
	MemId INT PRIMARY KEY,
	ExhibitName VARCHAR(255) NOT NULL,
	Amount FLOAT NOT NULL CHECK (Amount > 0),
	FOREIGN KEY (MemId) REFERENCES Donor(MemId),
	FOREIGN KEY (ExhibitName) REFERENCES Exhibit(ExhibitName)
);

INSERT INTO Donation (MemID, ExhibitName, Amount)
VALUES (68421, ‘Outstanding Meixsell Planes’,10000.00);

INSERT INTO Donation (MemID, ExhibitName, Amount)
VALUES (22022, ‘Collection of Planes Destroyed By Holden Caraway’,10001.00);


CREATE TABLE Contact_Information (
	MemId INT PRIMARY KEY,
	FirstName VARCHAR(255) NOT NULL,
	LastName VARCHAR(255) NOT NULL,
	Phone INT NOT NULL CHECK Phone EQUALS 10,
	Email VARCHAR(255),
	Address VARCHAR(255) NOT NULL,
	FOREIGN KEY (MemId) REFERENCES Donor(MemId)
);

INSERT INTO Contact_Information (MemId, FirstName, LastName, Phone, Email, Address)
